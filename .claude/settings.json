{
  "version": "3.0.0",
  "theme": "dark",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "editor": {
    "tab_size": 2,
    "insert_spaces": true,
    "auto_save": true,
    "format_on_save": false
  },
  "terminal": {
    "font_size": 14,
    "cursor_blink": true
  },
  "notifications": {
    "enabled": true,
    "sound": false,
    "desktop": true
  },
  "ai": {
    "auto_suggestions": true,
    "inline_completions": false,
    "code_review_on_save": false
  },
  "workspace": {
    "auto_open_files": [],
    "sidebar_visible": true,
    "panel_visible": true
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "description": "Pre-task initialization and state sync",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-task.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "description": "Post-task completion and quality checks",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-task.sh"
          }
        ]
      },
      {
        "description": "Audit root directory for misplaced files",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/audit-root-cleanliness.sh"
          }
        ]
      },
      {
        "description": "Remind to run smoke tests when server/test files were modified",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/smoke-test-reminder.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "description": "Enforce file placement rules - prevents doc sprawl in root",
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/enforce-file-placement.sh"
          }
        ]
      },
      {
        "description": "Governance code quality check - advisory",
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/governance-check.sh"
          }
        ]
      },
      {
        "description": "Governance code quality check - advisory",
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/governance-check.sh"
          }
        ]
      }
    ]
  }
}
