{
  "name": "nxtg-forge",
  "version": "3.0.0",
  "type": "module",
  "description": "Next-Generation Development Forge - AI-Orchestrated Development System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc --watch",
    "ui:dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "bootstrap:test": "tsx src/core/bootstrap.ts --test",
    "status": "tsx scripts/status.ts",
    "clean": "rm -rf dist node_modules && npm install",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "init": "./init.sh"
  },
  "keywords": [
    "forge",
    "ai",
    "orchestration",
    "claude",
    "development",
    "automation"
  ],
  "author": "NXTG Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/winston": "^2.4.4",
    "@vitest/ui": "^4.0.18",
    "c8": "^10.1.3",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.29.0",
    "lucide-react": "^0.563.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "simple-git": "^3.30.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "3.4.19",
    "tsx": "^4.21.0",
    "vite": "^7.3.1",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  }
}
