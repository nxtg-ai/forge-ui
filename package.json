{
  "name": "nxtg-forge",
  "version": "3.0.0",
  "type": "module",
  "description": "Next-Generation Development Forge - AI-Orchestrated Development System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run ui:dev\"",
    "server:dev": "tsx watch src/server/api-server.ts",
    "ui:dev": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server/api-server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/test/integration/",
    "test:security": "vitest run src/test/security/",
    "test:performance": "vitest run src/test/performance/",
    "test:quality": "vitest run src/test/quality/",
    "audit:security": "tsx src/test/reports/security-audit.ts",
    "audit:quality": "tsx src/test/reports/quality-dashboard.ts",
    "quality:gates": "npm run build && npm run lint && npm run test:coverage && npm run audit:security && npm run audit:quality",
    "quality:report": "npm run audit:quality && open .claude/reports/quality-dashboard.html",
    "bootstrap:test": "tsx src/core/bootstrap.ts --test",
    "status": "tsx scripts/status.ts",
    "clean": "rm -rf dist node_modules && npm install",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "init": "./init.sh"
  },
  "keywords": [
    "forge",
    "ai",
    "orchestration",
    "claude",
    "development",
    "automation"
  ],
  "author": "NXTG Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.0.0",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^4.0.18",
    "c8": "^10.1.3",
    "eslint": "^8.0.0",
    "glob": "^13.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "framer-motion": "^12.29.0",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.563.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "simple-git": "^3.30.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "3.4.19",
    "tsx": "^4.21.0",
    "vite": "^7.3.1",
    "winston": "^3.19.0",
    "ws": "^8.17.1",
    "zod": "^4.3.6"
  },
  "devDependenciesExtra": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10"
  }
}
