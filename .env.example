# NXTG-Forge Environment Configuration
# Copy this to .env and customize as needed

# ============================================
# DEDICATED PORTS FOR NXTG-FORGE
# ============================================
# These ports are specifically chosen to avoid
# conflicts with other products you may be running
PORT=5051              # API Server port
VITE_PORT=5050         # UI port

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
FRONTEND_URL=http://localhost:5050

# ============================================
# API CLIENT CONFIGURATION
# ============================================
VITE_API_URL=http://localhost:5051/api
VITE_WS_URL=ws://localhost:5051/ws

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WEBSOCKET=true
ENABLE_REAL_TIME=true
ENABLE_YOLO_MODE=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/forge.log

# ============================================
# PERFORMANCE
# ============================================
# WebSocket message compression
WS_COMPRESSION=true
# API request timeout (ms)
REQUEST_TIMEOUT=30000
# State sync interval (ms)
SYNC_INTERVAL=5000

# ============================================
# SECURITY (Production)
# ============================================
# Uncomment and configure for production
# JWT_SECRET=your-secret-key-here
# RATE_LIMIT_WINDOW=900000
# RATE_LIMIT_MAX=100
# ALLOWED_ORIGINS=https://yourdomain.com
